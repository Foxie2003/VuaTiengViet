<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menuchinh"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:background="@drawable/tien"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="250dp"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:orientation="horizontal">
    <ImageView
        android:background="@drawable/money"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/tien"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="250"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#FFC107"/>
    </LinearLayout>
    <Button
        android:id="@+id/choingay"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="260dp"
        android:text="CHƠI NGAY"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:background="@drawable/button1"/>
    <Button
        android:background="@drawable/button2"
        android:id="@+id/bxh"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="BẢNG XẾP HẠNG"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18dp"/>
    <Button
        android:textColor="@color/black"
        android:background="@drawable/button3"
        android:layout_marginTop="10dp"
        android:id="@+id/thoat"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="THOÁT"
        android:textStyle="bold"
        android:textSize="18dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/amluong"
            android:src="@drawable/volume"
            android:padding="11dp"
            android:background="@drawable/button4"
            android:layout_marginRight="10dp"
            android:layout_width="50dp"
            android:layout_height="55dp"/>
        <ImageView
            android:id="@+id/nhacnen"
            android:padding="11dp"
            android:src="@drawable/nhacnen"
            android:background="@drawable/button5"
            android:layout_width="50dp"
            android:layout_height="55dp"/>
        <ImageView
            android:id="@+id/chiase"
            android:src="@drawable/share"
            android:padding="11dp"
            android:background="@drawable/button4"
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="55dp"/>
    </LinearLayout>
</LinearLayout>