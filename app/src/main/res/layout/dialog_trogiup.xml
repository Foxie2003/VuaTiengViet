<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="450dp"
    android:background="#00FFFFFF">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="380dp"
        android:id="@+id/shopp"
        android:background="@drawable/nen_trogiup">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="150dp"
            android:text="Mở một ô chữ với giá :"
            android:textColor="#FFAB00"
            android:textStyle="bold"
            android:textSize="28dp"
            android:id="@+id/tieude"/>
        <RelativeLayout
            android:id="@+id/phi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tieude">
            <TextView
                android:id="@+id/ruby"
                android:layout_marginLeft="155dp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="50"
                android:layout_marginTop="50dp"
                android:textColor="#E6780D"
                android:textStyle="bold"
                android:textSize="35dp"/>
            <ImageView
                android:layout_marginTop="40dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="-10dp"
                android:layout_toRightOf="@+id/ruby"
                android:background="@drawable/money"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:layout_alignTop="@+id/phi">
            <Button
                android:id="@+id/xacnhan"
                android:layout_marginLeft="55dp"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:text="Chấp nhận"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:background="@drawable/nenbutchoingay"/>
            <Button
                android:layout_toRightOf="@+id/xacnhan"
                android:id="@+id/huy"
                android:layout_marginLeft="35dp"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:text="Từ chối"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:background="@drawable/nenbutthoat"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/nenchiase"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:layout_alignTop="@+id/button">
            <TextView
                android:id="@+id/tieude2"
                android:layout_marginLeft="60dp"
                android:layout_width="250dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Chia sẻ cho bạn bè :"
                android:textColor="#FFAB00"
                android:textStyle="bold"
                android:textSize="23dp"/>
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="-20dp"
                android:layout_toRightOf="@+id/tieude2"
                android:background="@drawable/but_chiase"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/cham"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shopp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="Chạm để thoát"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="italic">
    </TextView>
</RelativeLayout>